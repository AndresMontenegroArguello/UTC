Algoritmo Colones
	// Introducci√≥n
	Escribir 'Introduccion a la Programacion'
	Escribir 'Andres Montenegro'
	Escribir '22/Marzo/2020'
	Escribir 'Tarea 1.4'
	Escribir 'Clase #8 - Monedas'
	Escribir '**********'
	
	//Programa
	Escribir "Colones: "
	Leer crc
	
	usd <- crc * 0.0017
	eur <- crc * 0.0016
	gbp <- crc * 0.0014
	nio <- crc * 0.059
	btc <- usd * 0.00015
	
	
	Escribir "Dolar Estadounidense: ", usd, "USD"
	Escribir "Euro: ", eur, "EUR"
	Escribir "Libra Esterlina : ", gbp, "GBP"
	Escribir "Cordoba Nicaraguense: ", nio, "NIO"
	Escribir "Bitcoin: ", btc, "BTC"
FinAlgoritmo
