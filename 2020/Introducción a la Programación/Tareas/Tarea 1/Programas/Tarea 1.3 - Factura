Algoritmo Factura
	// Introducci√≥n
	Escribir 'Introduccion a la Programacion'
	Escribir 'Andres Montenegro'
	Escribir '22/Marzo/2020'
	Escribir 'Tarea 1.3'
	Escribir 'Clase #8 - Factura'
	Escribir '**********'
	
	//Programa
	Escribir "Ingrese Metros Cubicos: "
	Leer mc
	pago <- 10000
	Si mc > 20 Y mc < 30 Entonces
		pago <- pago + ((mc - 20) * 500)
	FinSi
	Si mc > 30 Entonces
		pago <- pago + (10 * 500) + ((mc - 30) * 1000)
	FinSi
	Escribir "Debe pagar ", pago, " colones, correspondientes a ", mc, " metros cubicos"
FinAlgoritmo
